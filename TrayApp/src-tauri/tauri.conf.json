{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Status Indicator",
  "version": "0.1.0",
  "identifier": "com.nick.statusindicator",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "settings",
        "title": "Status Indicator Settings",
        "width": 500,
        "height": 400,
        "resizable": false,
        "center": true,
        "visible": false,
        "decorations": true,
        "skipTaskbar": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.13",
      "signingIdentity": null
    }
  }
}
